<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.UserMapper">

    <select id="getByOpenid" parameterType="java.lang.String" resultType="com.sky.entity.User">
        select * from user where openid = #{openid}
    </select>

    <insert id="insert" parameterType="com.sky.entity.User" useGeneratedKeys="true" keyProperty="id">
        insert into user
            (id, openid, name, phone, sex, id_number, avatar, create_time)
        values
            (#{id}, #{openid}, #{name}, #{phone}, #{sex}, #{idNumber}, #{avatar}, now())
    </insert>

    <select id="getById" parameterType="java.lang.Long" resultType="com.sky.entity.User">
        select * from user where id = #{userId}
    </select>

    <select id="sumNewUser" resultType="java.lang.Integer">
        select count(id) from user
        <where>
            <if test="begin != null">
                and create_time &gt; #{begin}
            </if>
            <if test="end != null">
                and create_time &lt; #{end}
            </if>
        </where>
    </select>

    <select id="sumTotalUser" resultType="java.lang.Integer">
        select count(id) from user
        <where>
            <if test="end != null">
                and create_time &lt; #{end}
            </if>
        </where>
    </select>

</mapper>